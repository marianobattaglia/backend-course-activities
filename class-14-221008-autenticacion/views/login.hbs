<div class="container bg-light p-3 rounded">
  <h2 class="text-dark">Iniciar sesion</h2>
  <form action="login" method="post">
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su nombre</label>
      <input type="text" class="form-control" name="name" />
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese correo electróncio</label>
      <input type="email" class="form-control" name="username" />
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese contraseña</label>
      <input type="password" class="form-control" name="password" />
    </div>
    <button type="submit" class="btn btn-primary">Acceder</button>
  </form>
  <br />
  <a href="register" class="btn btn-secondary btn-redirect">Registrarse</a>
</div>