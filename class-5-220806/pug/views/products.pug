html
    head
        title='test pug'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous") 
        style
            include styles.css
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")
    body
        div(class='navBarCustom')
            a(class='anchorButton' href='http://localhost:8080/products') Product List
            a(class='anchorButton' href='http://localhost:8080/form') Form
        h1(class='pageTitle')="Product List"
        div
        for item in products
            div(class='productContainer')
                p(class='productId')=item.id
                p(class='productTitle')=item.title
                p(class='productPrice')=item.price
                img(class='productImg', src=item.thumbnail)